<div class="row">
    <div class="col-md-7">
        <div class="form-group form-inline">
            <input id="txtInput" type="text" class="form-control" style="width:73%" />&nbsp;
            <input id="btnSend" type="button" value="Send" class="btn btn-success" />
            <input id="btnDisconnect" value="Disconnect" class="btn btn-danger" style="width:105px" />
        </div>
        <div id="divPanel" style="overflow:auto; background-color:black; color:limegreen; width:100%; height:300px"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/signalr.js"></script>
    <script src="~/js/mySignalRClient.js"></script>
}
